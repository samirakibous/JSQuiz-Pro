<%- include('partials/header') %>
<body class="bg-gray-100 min-h-screen">
    <%- include('partials/navbar') %>

    <div class="container mx-auto px-4 py-8">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-blue-600 mb-4">JSQuiz-Pro</h1>
            <p class="text-gray-600">Testez vos connaissances en développement web</p>
        </div>

        <% if (user && userStats) { %>
