<%- include('partials/header') %>
<body class="bg-gray-100 min-h-screen">
    <%- include('partials/navbar') %>

    <div class="container mx-auto px-4 py-8">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-blue-600 mb-4">JSQuiz-Pro</h1>
            <p class="text-gray-600">Testez vos connaissances en développement web</p>
        </div>

        <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl font-semibold mb-6 text-center">Choisissez une thématique</h2>

            <div class="grid md:grid-cols-3 gap-6">
                <% thematiques.forEach(theme => { %>
                <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                    <div class="text-center">
                        <i class="fas fa-code text-4xl text-blue-500 mb-4"></i>
                        <h3 class="text-xl font-semibold mb-3"><%= theme.thematique %></h3>
                        <p class="text-gray-600 mb-4">Quiz sur <%= theme.thematique %></p>

                        <% if (user) { %>
                            <a href="/quiz/<%= theme.thematique %>"
                               class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 transition-colors">
                                Commencer
                            </a>
                        <% } else { %>
                            <a href="/login"
                               class="bg-gray-500 text-white px-6 py-2 rounded hover:bg-gray-600 transition-colors">
                                Se connecter pour jouer
                            </a>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
