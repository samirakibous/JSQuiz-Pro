            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-xl font-semibold mb-4">Mes informations</h3>
                <div class="space-y-2">
                    <p><strong>Utilisateur:</strong> <%= userStats.username %></p>
                    <p><strong>Points moyens:</strong> <%= userStats.average %></p>
                </div>
            </div>

            <!-- Partie droite: Dernier score et Top 5 -->
            <div class="space-y-6">
                <!-- Dernier score -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-xl font-semibold mb-4">Dernier score</h3>
                    <% if (lastScore) { %>
                        <p><strong>Thématique:</strong> <%= lastScore.thematique %></p>
                        <p><strong>Score:</strong> <%= lastScore.score %></p>
                        <p><strong>Date:</strong> <%= new Date(lastScore.date_played).toLocaleDateString() %></p>
                    <% } else { %>
                        <p>Aucun score enregistré</p>
                    <% } %>
                </div>

